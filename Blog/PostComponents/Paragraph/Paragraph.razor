@using Blog.PostComponents.Compound
@if (Content is not null)
{
    <p class="@Content.Style.GetStyleClasses() @Content.TextPosition.GetTextPositionClass() @Content.GetAdditionalClasses()">
        @if (Content.ChildContent.Any())
        {
            <Compound Content="Content.ChildContent" />            
        }
        else
        {
            @Content.Text
        }
    </p>
}