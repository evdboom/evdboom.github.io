@using Blog.PostComponents.Code
@using Blog.PostComponents.Date
@using Blog.PostComponents.Header
@using Blog.PostComponents.Image
@using Blog.PostComponents.Link
@using Blog.PostComponents.List;
@using Blog.PostComponents.Paragraph
@using Blog.PostComponents.Line
@using Blog.PostComponents.Quote
@using Blog.PostComponents.Table
@if (Content is not null)
{
    @switch (Content.Type)
        {
            case ComponentType.Paragraph:
                <Paragraph Content="(ParagraphContent)Content" />
                break;
            case ComponentType.Header:
                <Header Content="(PostComponents.Header.HeaderContent)Content" />
                break;
            case ComponentType.Link:
                <Link Content="(LinkContent)Content" />
                break;
            case ComponentType.Line:
                <Line Content="(LineContent)Content" />
                break;
            case ComponentType.Date:
                <Date Content="(PostComponents.Date.DateContent)Content" /> 
                break;
            case ComponentType.Quote:
                <Quote Content="(QuoteContent)Content" />
                break;
            case ComponentType.Code:
                <Code Content="(CodeContent)Content" />
                break;
            case ComponentType.Table:
                <Table Content="(TableContent)Content" />
                break;
            case ComponentType.Image:
                <Image Content="(ImageContent)Content" />
                break;
            case ComponentType.List:
                <List Content="(ListContent)Content" />
                break;
        }
}