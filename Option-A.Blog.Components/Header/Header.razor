@if (Content is not null)
{
    @switch (Content.HeaderSize)
    {
        case HeaderSize.One:
            <h1 class="@Content.GetClasses()">@Content.Text</h1>
            break;
        case HeaderSize.Two:
            <h2 class="@Content.GetClasses()">@Content.Text</h2>
            break;
        case HeaderSize.Three:
            <h3 class="@Content.GetClasses()">@Content.Text</h3>
            break;
        case HeaderSize.Four:
            <h4 class="@Content.GetClasses()">@Content.Text</h4>
            break;
        case HeaderSize.Five:
            <h5 class="@Content.GetClasses()">@Content.Text</h5>
            break;
        case HeaderSize.Six:
            <h6 class="@Content.GetClasses()">@Content.Text</h6>
            break;
    }
}