@if (Content is not null)
{
    if (Content.Ordered)
    {
        <ol class="@Content.GetClasses()" @attributes=Content.Attributes @onclick=Click>
            @foreach(var child in Content.ChildContent)
            {
                <ListItem Content="(ListItemContent)child"/>            
            }
            @if (ChildContent is not null)
            {
                @ChildContent
            }
        </ol>
    }
    else
    {
        <ul class="@Content.GetClasses()" @attributes=Content.Attributes @onclick=Click>
            @foreach (var child in Content.ChildContent)
            {
                <ListItem Content="(ListItemContent)child" />
            }
            @if (ChildContent is not null)
            {
                @ChildContent
            }
        </ul>   
    }    
}

